<div class="my_review">
<h1><%= @user.name %></h1>

<p class="like">
  <%= link_to("マイレビュー", "/mypage/#{@current_user.id}", {class:"button-11"})%>
  <%= link_to("お気に入り", "/like/#{@current_user.id}", {class:"button-3"})%>
</p>

<% @likes.each do |like| %>
  <% @posts.each do |post| %>
    <% if like.posts_id == post.id then %>
    <div class="box26">
    <span class="box-title">『<%= post.title %>』　著者：<%= post.author %></span>
      <p><%= post.review %></p><br>
      <p id="evaluation">評価:<%= post.evaluation %>
      <%= link_to("削除", "/like/destroy/#{like.id}", {method: :post, class:"button-11"})%></p>
    </div>
    <% end %>
  <% end %>
<% end %>

</div>

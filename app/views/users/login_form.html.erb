<body>
<div class="s1">
  <div class="login">
  <h1>ログイン</h1>

  <%= form_tag("/login") do %>
    <p id="email">メールアドレス<br><input name="email" value="<%= @email %>"></p>
    <p id="password">パスワード<br><input type="password" name="password"></p>
    <input type="submit" value="ログイン" id="button">
  <% end %>
  </div>
  <p class="new_user">アカウントを持っていない方</p>
  <p class="sign_up_link"><%= link_to("アカウント作成", "/sign_up")%></p>
  <% if @error_message %>
    <p class="error_message"><%= @error_message %></p>
  <% end %>
</div>
</body>
